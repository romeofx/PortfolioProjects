--GLOBAL NUMBER

SELECT SUM(new_cases) total_cases, SUM(CAST(new_deaths as int)) total_death,SUM(CAST(new_deaths as int))/SUM(new_cases)
*100 DeathpercentGlobal
FROM SQLproject1..coviddeath
WHERE continent is not null
